extend layout

block content
  form(method='post', class='hidden')
    textarea(rows='10', cols='10', name='text')
    button(type='submit') Add
    a(class='cancel', href='javascript:;') x
  a(id='add', href='javascript:;') +
  ul
    for n in notes
      li
        span!= n.text
        a(href='javascript:;', class='delete', data-url='/note/#{n.id}') x
